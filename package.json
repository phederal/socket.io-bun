{
	"name": "socket.io-bun",
	"module": "index.ts",
	"type": "module",
	"scripts": {
		"dev": "NODE_ENV=development bun run --watch index.ts",
		"start": "NODE_ENV=production bun run index.ts",
		"test": "NODE_ENV=production bun test",
		"test:live": "NODE_ENV=production bun run test/server/test-server.ts",
		"test:real": "NODE_ENV=production bun test test/integration/websocket.test.ts",
		"test:server": "NODE_ENV=production bun run test/run-with-server.ts",
		"test:unit": "bun test test/unit/",
		"test:integration": "bun test test/integration/",
		"test:watch": "bun test --watch --exclude='**/integration/**'",
		"test:coverage": "bun test --coverage --exclude='**/integration/**'",
		"test:socket": "NODE_ENV=development bun test test/unit/socket.test.ts --timeout 15000",
		"test:namespace": "NODE_ENV=test bun test test/unit/namespace.test.ts --timeout 15000",
		"test:parser": "NODE_ENV=test bun test test/unit/parser.test.ts --timeout 15000",
		"test:io": "NODE_ENV=development bun test test/example.test.ts --timeout 15000"
	},
	"devDependencies": {
		"@types/base64id": "^2.0.2",
		"@types/bun": "latest",
		"@types/debug": "^4.1.12",
		"debug": "^4.4.1",
		"socket.io-client": "^4.8.1"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@msgpack/msgpack": "^3.1.1",
		"@socket.io/component-emitter": "^3.1.2",
		"base64id": "^2.0.0",
		"engine.io-parser": "^5.2.3",
		"hono": "^4.7.10"
	}
}