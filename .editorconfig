# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = crlf
indent_style = tab
indent_size = 2
tab_width = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.vue]
indent_size = 2
tab_width = 2

[*.yml]
indent_size = 2
indent_style = space

[*.json]
indent_size = 2
indent_style = space

[*.*rrc]
indent_size = 2
indent_style = space

[*.md]
trim_trailing_whitespace = false
